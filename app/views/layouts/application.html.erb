<!DOCTYPE html>
<html>
  <head>
    <title>BotanicalGarden</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <p class="notice">
      <%#= notice %>
    </p>
    <p class="alert"><%= alert %></p>
    <div id="yield_div" class="container_12">
      <header role="banner">
        <p >
          <% if current_user %>
            您好:<%=  current_user.email %><%= link_to " 退出", destroy_user_session_path %>
          <%else%>
            <%= link_to "登录", new_user_session_path %> <%= link_to "注册", new_user_registration_path%>
          <%end%>
        </p>
      </header>
      <div class="main">
        <%= yield %>
      </div>
    </div>
  <footer role="contentinfo">
  </footer>
</body>
</html>
