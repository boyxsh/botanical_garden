<h1>Listing products</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Quantity</th>
		<th>Price</th>
		<th>total</th>
		<th>操作</th>
  </tr>

<% @cart_items.each do |ci| %>
  <tr>
    <td><%= ci.product.name %></td>
    <td><%= ci.quantity %></td>
		<td><%= ci.price %></td>
		<td><%= ci.subtotal_for%></td>
		<!-- <td><%=link_to '' ''%></td> -->
  </tr>
<% end %>
	<tr>
		<td colspan=3>TOTAL</td>
		<td><%= @order.subtotal%></td>
	</tr>
</table>

<br />
<%p @cart_items[0].order_id%>
<%= link_to '继续购物', '/product'%>
<%= link_to '结算', "/save_order/#{@cart_items[0].order_id}" %>