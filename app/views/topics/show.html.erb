<h1>
  <%= link_to "植物园论坛",forums_path %> > <%= link_to @topic.forum.name ,forum_path(@topic.forum)%> >  <%= @topic.title %>
</h1>

<p>
  <b>Title:</b>
  <%= @topic.title %>
</p>

<p>
  <b>State:</b>
  <%= @topic.state %>
</p>

<p>
  <b>Priority:</b>
  <%= @topic.priority %>
</p>

<p>
  <b>Views count:</b>
  <%= @topic.views_count %>
</p>




<% @topic.posts.each_with_index do |post, index| %>
  <table >
    <tr>
      <td><%= index+1 %>楼  <%= post.user.email %> [<%= post.created_at.strftime('%Y-%m-%d %H:%M:%S') %>] <%= "发表于" + show_post_time(post.created_at) %></td>
    </tr>
    <tr class="post_body">
      <td> <%=post.body %> by </td>
    </tr>
  </table>
<% end %>

