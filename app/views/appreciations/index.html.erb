<h1>Listing appreciations</h1>

<table>
  <tr>
    <th>Categories</th>
    <th>image</th>
    <th>Name</th>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @appreciations.each do |appreciation| %>
  <tr>
    <td><%= appreciation.category.name %></td>
    <td><%= link_to image_tag(appreciation.avatar.url(:thumb)), :action => 'show', :id => appreciation%></td>
    <td><%= appreciation.name %></td>
    <td><%= appreciation.title %></td>
    <td>
      <pre>
      <%= appreciation.description[1..50] %>...
      </pre>
    </td>
    <td><%= link_to 'Show', appreciation %></td>
    <td><%= link_to 'Edit', edit_appreciation_path(appreciation) %></td>
    <td><%= link_to 'Destroy', appreciation, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

